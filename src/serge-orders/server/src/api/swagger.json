  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "Order": {
      "type": "object",
      "required": [
        "products",
        "expectedBy"
      ],
      "properties": {
        "products": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/Product"
          }
        },
        "expectedBy": {
          "type": "string",
          "format": "date"
        },
        "archived": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "Product": {
      "type": "object",
      "required": [
        "product",
        "quantity"
      ],
      "properties": {
        "product": {
          "type": "string",
          "format": "uri"
        },
        "quantity": {
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "Error": {
      "type": "object",
      "required": [
        "message"
      ],
      "properties": {
        "message": {
          "type": "string"
        },
        "details": {
          "type": "object"
        }
      }
    }
  }
