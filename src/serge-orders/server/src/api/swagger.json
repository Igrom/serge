          }
        },
        "security": [
          { "api_key": [] }
        ]
      }
    },
    "/v1/orders/{id}": {
      "get": {
        "summary": "Retrieve individual order data.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Order ID",
            "type": "string",
            "format": "guid"
          }
        ],
        "responses": {
          "200": {
            "description": "",
