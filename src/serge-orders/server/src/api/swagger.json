            }
          }
        },
        "security": [
          { "api_key": [] }
        ]
      },
      "put": {
        "summary": "Update individual order data.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Order ID",
            "type": "string",
            "format": "guid"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Order data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Order"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "400": {
            "description": "",
            "schema": {
